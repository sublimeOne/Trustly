{
  "hosting": {
    "headers": [{ "source":"**", 
      "headers": [{
        "key": "Cache-Control",
        "value": "public, max-age=0"
    }]
              }
    ],
    "public": "www",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
